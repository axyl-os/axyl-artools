usage() {
    echo "Usage: ${0##*/} [optional listname]"
    echo '    -r                 Run generated commands'
    echo '    -h                 This help'
    echo ''
    echo ''
    exit $1
}

movelistname=pkg_moves
runlist=false

opts='rh'

while getopts "${opts}" arg; do
    case "${arg}" in
        r) runlist=true ;;
        h|?) usage 0 ;;
        *) echo "invalid argument '${arg}'"; usage 1 ;;
    esac
done

shift $(($OPTIND - 1))

movelistname="$1"; shift

batch_move "$movelistname"
