. /usr/lib/artools/util-pkg.sh

batch_move() {
    local name="${1:-pkg_moves}"
    local pkglist=${TREE_DIR_ARTIX}/$name.list
    [[ -f $pkglist ]] || die "${TREE_DIR_ARTIX}/${name}.list does not exist!"
    while read entry;do
        local pkg=${entry##*:}
        local src=${entry%:*}
        src=${src#*:}
        local dest=${entry%%:*}
        if ${runlist}; then
            ${dest}pkg -s ${src} -u -p ${pkg}
        else
            msg "%s" "${dest}pkg -s ${src} -u -p ${pkg}"
        fi
    done < $pkglist
}

