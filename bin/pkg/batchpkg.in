. @libdir@/artools/util-base.sh
. @libdir@/artools/util-pkg.sh

load_user_info

load_config "${USERCONFDIR}/artools/artools.conf" || load_config "${SYSCONFDIR}/artools.conf"

move=false
upgrade=false

batch_move() {
    for entry in "${USERCONFDIR}"/artools/pkgmoves.list; do
        local pkg=${entry##*;}
        local src=${entry%*;}
        src=${src#*;}
        local dest=${entry%%*;}
        echo "${dest}pkg -p $pkg -s ${src}"
    done
}

batch_upgrade() {
    for entry in "${USERCONFDIR}"/artools/pkgupgrades.list; do
        pkg=${entry#*;}
        dest=${entry%*;}
        buildtree -i -p "$pkg"
        echo "${REPO_DEST}pkg -p $pkg"
    done
}

usage() {
    echo "Usage: ${0##*/} [options]"
    echo "    -m                 Batch move"
    echo "    -u                 Batch upgrade"
    echo '    -h                 This help'
    echo ''
    echo ''
    exit $1
}

opts='umh'

while getopts "${opts}" arg; do
    case "${arg}" in
        m) move=true ;;
        u) upgrade=true ;;
        h|?) usage 0 ;;
        *) echo "invalid argument '${arg}'"; usage 1 ;;
    esac
done

shift $(($OPTIND - 1))

if ${move}; then
    batch_move
fi

if ${upgrade};then
    batch_upgrade
fi
